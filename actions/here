action=$1
shift

[ "$action" = "usage" ] && {
    echo "    $(basename $0) [-s [NUM]] [TERM...]"
    echo "      Displays all tasks with a context of the current host / location."
    echo "      If TERM specified, lists only tasks that contain TERM(s)."
    echo "      With -s, show just the summary, and the NUM last tasks."
    echo ""
    exit
}

summaryNum=
if [ "$1" = '-s' ]; then
    if [[ "$2" =~ ^[0-9]+$ ]]; then
        summaryNum=$2
        shift
    else
        summaryNum=0
    fi
    shift
fi

if [ -z "$TODOTXT_HERE_DESIGNATOR" ]; then
    [ -n "$HOSTNAME" ] || die "TODO: Cannot determine hostname!"
    export TODOTXT_HERE_DESIGNATOR="@$(echo "$HOSTNAME" | tr 'A-Z' 'a-z')"
fi

post_filter_command="grep -ve '^ *[0-9]\+ [xX] ' | grep -e ' ${TODOTXT_HERE_DESIGNATOR}\( \|$\)'"
if [ "$summaryNum" ]; then
    tasks=$(TODOTXT_VERBOSE=0 _list "$TODO_FILE" "$@")
    if [ "$tasks" ]; then
        tasksCnt=$(echo "$tasks" | wc -l)
        tasksCntPlural=s; [ $tasksCnt -eq 1 ] && tasksCntPlural=
        if [ $summaryNum -gt 0 ]; then
            if [ $tasksCnt -gt $summaryNum ]; then
                printf 'TODO: You have %d local task%s open on this system; showing the last %d:\n' $tasksCnt "$tasksCntPlural" $summaryNum
                echo "$tasks" | tail -n $summaryNum
            else
                printf 'TODO: You have %d local task%s open on this system:\n' $tasksCnt "$tasksCntPlural"
                echo "$tasks"
            fi
        else
            printf 'TODO: You have %d local task%s open on this system.\n' $tasksCnt "$tasksCntPlural"
        fi
    fi
else
    _list "$TODO_FILE" "$@"
fi
